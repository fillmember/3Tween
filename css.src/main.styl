/*Document Elements*/
body
  font-family 'Raleway', sans-serif
  font-weight 500
  font-size 12px
  color #333
  line-height 15.625px
  margin 0
  padding 0

a
a:visited
  color #333
a:hover
a:active
  background-color #FF0

ul
li
  margin 12em 0 0 0
  padding 0
  list-style none

p
li
  margin 0 0 2em 0

h1
h2
h3
h4
  margin 0
  padding 0

h1
  font-weight 500
  margin-bottom 0.2em
  font-size 1.66em

h2
  font-size 1.2em
  font-weight 300

h3
  text-align center
  font-weight 500
  font-size 1.3em
  padding 0
  margin-bottom .5em

h4
  text-decoration underline

/*Interface*/
.outer-wrapper
  display flex
  flex-flow row nowrap
  width 100vw
  height 100vh

.canvas-container
  width 80%
  height 100%
  min-height 500px
  min-width 500px

  background-color gray
  display flex
  align-items center
  justify-content center
  div
    height 500px
    width 500px
    position relative
  canvas
    position absolute
    top 0
    left 0

.sidebar
  font-weight 700
  padding 0 .1rem


@import 'input.styl'
@import 'input-containers.styl'

