
active-color = #FF0
main-color = #333

transition-duration = .05s

input
button
label
	user-select none
	cursor pointer
	outline none
	appearance none
	padding 0
	margin 0
	text-align left

button
	font-weight 700
	text-transform lowercase
	background #FFF
	border 2px solid main-color
	border-radius 5px
	padding 0 3px 2px 4px
	display flex
	align-items center
	.fa
		position relative
		top 1px
		font-size 1.3em
		padding-right 3px
	transition background-color transition-duration
	&.active
		background-color active-color
